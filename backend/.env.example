# Log Level (info, debug, trace)
RUST_LOG=info

# Binding Address (UDP/QUIC)
VPN_BIND_ADDR=0.0.0.0:4433

# Authentication Token (Required)
# Clients must match this token to connect
VPN_AUTH_TOKEN=change_me_to_secure_token

# Network Configuration (CIDR)
VPN_NETWORK=10.8.0.0/24

# DNS Server to push to clients
VPN_DNS=1.1.1.1

# (Optional) TUN Device Name
# VPN_TUN_DEVICE=tun0

# Traefik & Let's Encrypt Configuration
# The domain name for your services (e.g., vpn.example.com)
DOMAIN_NAME=example.com
# Email for Let's Encrypt notifications
ACME_EMAIL=your-email@example.com

# Ports for Traefik
# If you have an existing Nginx on 443, change this to e.g. 8443
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443

# SSL Resolver Name
# - "myresolver" = Enable Let's Encrypt (Needs valid public domain + port 80 check)
# - "" (Empty)   = Disable Let's Encrypt (Use Self-Signed Certs)
TRAEFIK_ACME_RESOLVER=myresolver
